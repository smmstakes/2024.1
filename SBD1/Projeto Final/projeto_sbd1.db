CREATE TABLE Banca (
    cnpj TEXT,
    nome_banca TEXT,
    regiao TEXT,
    PRIMARY KEY (cnpj) 
);

CREATE TABLE Produto (
    produto_id TEXT,
    nome_produto TEXT,
    fabricante TEXT,
    PRIMARY KEY (produto_id)
);

CREATE TABLE Policial (
    policial_id TEXT,
    nome_policial TEXT,
    patente TEXT,
    regiao_patrulha TEXT,
    PRIMARY KEY (policial_id)
);

CREATE TABLE Pessoa (
    cpf TEXT,
    nome TEXT,
    nome_social TEXT,
    idade INTEGER,
    sexo TEXT,
    genero TEXT,
    regiao TEXT,
    PRIMARY KEY (cpf)
);

CREATE TABLE Compra (
    compra_id TEXT,
    cpf_comprador TEXT,
    nome_produto TEXT,
    data_compra TEXT,
);

CREATE TABLE Banca_Has_Produto (
    cnpj TEXT,
    produto_id TEXT,
    PRIMARY KEY (cnpj, produto_id),
    FOREIGN KEY (cnpj) REFERENCES Banca(cnpj),
    FOREIGN KEY (produto_id) REFERENCES Produto(produto_id)
);

CREATE TABLE Caso_de_Pessoas_Desaparecidas (
    caso_id TEXT,
    policial_id TEXT,
    cpf_desaparecido TEXT,
    data_desaparecimento TEXT,
    ultima_regiao TEXT,
    descricao TEXT,
    PRIMARY KEY (caso_id),
    FOREIGN KEY (policial_id) REFERENCES Policial(policial_id),
    FOREIGN KEY (cpf_desaparecido) REFERENCES Pessoa(cpf)
);


